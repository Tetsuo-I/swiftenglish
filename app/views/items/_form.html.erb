<%= form_with(model: item, local: true) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :japanese, '日本語' %>
  <%= f.text_field :japanese %>
  
  <%= f.label :english, '英語' %>
  <%= f.text_field :japanese %>

  <%= f.submit '投稿' %>
<% end %>
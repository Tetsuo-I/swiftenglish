<% if current_user.like?(item) %>
  <%= form_with(model: current_user.likes.find_by(item_id: item.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= f.submit 'Like', class: 'btn btn-secondary btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.build, local: true) do |f| %>
    <%= hidden_field_tag :item_id, item.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
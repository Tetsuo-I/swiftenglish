<p>ユーザー名:<%= current_user.name %></p>

<div class = "container">
<h2>アイテム一覧</h2>

<table class="table table-bordered">
  <tr><th>Japanese</th><th>English</th><th></th></tr>
  <% @items.each do |item| %>
    <tr><td><%= link_to item.japanese, item %></td><td><%= item.english %></td><td><%= render 'likes/like_button', item: item %></td></tr>
  <% end %>
</table>

</div>

<div class = "text-center"><%= link_to "新規アイテムの投稿", new_item_path %></div>

<div class ="mt-3"><%= paginate @items %></div>
